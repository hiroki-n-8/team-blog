<%= form_with(url: search_posts_path, local: true, method: :get) do |form| %>
  <div class="input-group col-md-6 col-md-offset-3 text-center">
    <%= form.text_field :keyword, placeholder: "試合日を検索する　(例:2020-01-01)", class: "search-form form-control" %>
    <span class="input-group-btn">
      <%= form.submit "検索", class: "btn btn-primary" %>
    </span>
  </div>
<% end %>