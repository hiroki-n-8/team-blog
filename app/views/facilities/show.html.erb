      <%= link_to @facility.facebook do %>
        <i class="fab fa-facebook-square fa-3x faa-pulse animated-hover"></i>
        <p>facebook</p>
      <% end %>
      <%= link_to @facility.instagram do %>
        <div class="icon-insta">
          <i class="fab fa-instagram fa-3x faa-bounce animated-hover"></i>
          <p>instagram</p>
        </div>
      <% end %>
      <%= link_to @facility.twitter do %>
        <div class="icon-twitter">
          <i class="fab fa-twitter-square fa-3x faa-wrench animated-hover"></i>
          <p>twitter</p>
        </div>
      <% end %>
    </div>

